  @section('content')
    <div class="container">
      <h1>Support Request Form</h1>

      {{-- Display validation errors if any --}}
      @if (session.has('errors'))
        <div class="alert alert-danger">
          <ul>
            @if (session.has('errors'))
              @foreach (session.get('errors') as error)
                <li>{{ error.message }}</li>
              @endforeach
            @endif
          </ul>
        </div>
      @endif

      {{-- Display success message if any --}}
      @if (session.has('success'))
        <div class="alert alert-success">
          {{ session.get('success') }}
        </div>
      @endif

      {{-- Support Request Form --}}
      <form action="/support" method="post" enctype="multipart/form-data">

        {{-- First Name --}}
        <div class="form-group">
          <label for="first_name">First Name</label>
          <input type="text" name="first_name" id="first_name" class="form-control" required>
        </div>

        {{-- Last Name --}}
        <div class="form-group">
          <label for="last_name">Last Name</label>
          <input type="text" name="last_name" id="last_name" class="form-control" required>
        </div>

        {{-- Email Address --}}
        <div class="form-group">
          <label for="email">Email Address</label>
          <input type="email" name="email" id="email" class="form-control" required>
        </div>

        {{-- Support Message Title --}}
        <div class="form-group">
          <label for="title">Support Message Title</label>
          <input type="text" name="title" id="title" class="form-control" required>
        </div>

        {{-- Support Message Text --}}
        <div class="form-group">
          <label for="text">Support Message Text</label>
          <textarea name="text" id="text" class="form-control" required></textarea>
        </div>

        {{-- File Upload --}}
        <div class="form-group">
          <label for="file">File (Support just one file upload)</label>
          <input type="file" name="file" id="file" class="form-control-file" accept=".pdf, .doc, .docx" required>
        </div>

        {{-- Submit Button --}}
        <button type="submit" class="btn btn-primary">Submit Support Request</button>
      </form>
    </div>
